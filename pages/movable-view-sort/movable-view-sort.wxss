/* drag/drag.wxss */

.m-drag {
  width: 100%;
}

.m-drag .drag-area {
  width: 100%;
  background-color: #ddd;
}

.m-drag .drag-item {
  width: 100%;

}

.weui-cells {
  /* background-color: #e64340; */
  margin: 0;
}

.weui-cell {
  padding: 0 40rpx;
  height: 50px;
}

.drag-press {
  box-shadow: 1px 1px 3px #000;
  z-index: 999;
}


.g-doc, page {
  width: 100%;
  height: 100%;
  position: relative;
}
 
.g-doc {
  width: 100%;
  height: 100%;
  position: relative;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  flex-flow: column;
}
 
.layer-top {
  height: 50px;
}
 
.layer-bottom {
  height: 50px;
}
 
.g-bd {
  width: 100%;
  background: #000;
  -webkit-box-flex: 1;
  flex: 1;
  overflow-y: auto;
}
 
.g-ft {
  width: 100%;
  bottom: 0;
  position: fixed;
}